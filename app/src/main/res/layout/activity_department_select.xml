<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepartmentSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:gravity="center"
            android:text="Select Your Department"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_physc"
            android:layout_width="336dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:padding="20dp"
            android:text="Physical Science"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bs"
            android:layout_width="336dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:text="Bio Science"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_pe"
            android:layout_width="342dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:text="Physics &amp; Electronics"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/se"
            android:layout_width="338dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:text="Software Engineering"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/encm"
            android:layout_width="345dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:text="ENCM"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>